<body>
    <div class="block wrapper">
        <a class="brand" href="/" title="Accueil">
            <img class="logo" src="/icon.svg" alt="Logo WordPlay API">
            <h1 class="name">WORDPLAY API</h1>
        </a>
        <div class="navigation">
            <a class="item" href="/suggestion" title="Suggestion de jeux de mot">SUGGESTION</a>
            <a class="item" href="https://github.com/MinproVB/wordgame-api" title="Github de Blagues API">GITHUB</a>
            <a class="item" href="https://discord.gg/q6tKFUSjte" title="Discord de Blagues API">DISCORD</a>
            
            <% if(auth) { %>
                <a class="user-place" href="/account">
                    <div class="avatar" style="background-image: url('https://cdn.discordapp.com/avatars/<%= auth.user_id %>/<%= auth.user_avatar %>.png?size=256')" ></div>
                    <span class="username"><%= auth.user_name %></span>
                </a>
            <% } else { %>
                <a class="item rounded" href="/login" title="Connexion Discord">CONNEXION</a>
            <% } %>
        </div>
    </div>

